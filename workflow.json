{
    "workflows": [
        {
            "name": "example-read-file",
            "processors": [
                {
                    "task": "readfile" ,
                    "configuration": 
                    {
                        "path": "/app/mounts/csvingress/data.csv",
                        "removefiles": false
                    }
                },{
                    "task": "stdout"
                }
            ]
        },{
            "name": "example-monitor-directory",
            "processors": [
                {
                    "task": "monitordirectory",
                    "configuration":
                    {
                        "path": "/app/mounts/csvingress/",
                        "removefiles": false
                    }
                },{
                    "task": "parse-csv",
                    "configuration": {
                        "headerlength": 1,
                        "skiprows": 0,
                        "delimiter": ","
                    }
                },{
                    "task": "writefile",
                    "configuration": {
                        "path": "/app/mounts/csvegress"
                    }
                }
            ]
        }
    ]
}
